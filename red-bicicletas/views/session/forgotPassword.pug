extends ../layout

block content
    a(href='/usuarios') Regresar

    br
    h1 Forgot 
    br
    br
    
    form(action='/session/forgotPassword' method='post')
        .form-group
            label(for="email") Email:
            input#email.form-control(type='email' name='email'  class=errors.email ? 'is-invalid' : '')
            if errors.password
                small#emailHelp.text-danger
                    = errors.email.message
        br
        br
        input.btn.btn-primary(type='submit' value='Ok' )