extends ../layout

block content
    a(href='/usuarios') Regresar

    br
    b

    h1 Login
    
    br
    br
    
    form(action='/session/login' method='post')
        .form-group
            label(for="email") Email:
            input#email.form-control(type='email' name='email'  class=errors.email ? 'is-invalid' : '')
            if errors.password
                small#emailHelp.text-danger
                    = errors.email.message
        .form-group
            label(for="pwd") Password:
            input#pwd.form-control(type='password' name='password' class=errors.password ? 'is-invalid' : '')
            if errors.password
                small#passwordHelp.text-danger
                    = errors.password.message
        br
        br
        input.btn.btn-primary(type='submit' value='Ok' )